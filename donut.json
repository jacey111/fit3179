{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": null,
    "width": 250,
    "height": 250,
    "data": {
        "url": "https://raw.githubusercontent.com/jacey111/fit3179/refs/heads/main/Mental-illnesses-prevalence-Malaysia-2021.csv", 
        "format": {"type": "csv"}
    },
    "transform": [
        {
            "calculate": "parseFloat(datum.Percentage) * 10", 
            "as": "PercentageParsed"
        },
        {
            "calculate": "datum.Disorder + ' : ' + datum.PercentageParsed + '%'", 
            "as": "TooltipContent"
        }
    ],
    "mark": {"type": "arc", "innerRadius": 50, "stroke": "#fff"},
    "encoding": {
        "theta": {"field": "PercentageParsed", "type": "quantitative"},
        "color": {
            "field": "Disorder",
            "type": "nominal",
            "scale": {
                "domain": ["Schizophrenia", "Depressive disorders", "Anxiety disorders", "Bipolar disorder", "Eating disorders", "Others"],
                "range": ["#e59400", "#5a9bd4", "#66a566", "#a56936", "#8a67c9", "#888888"]
            },
            "legend": {"title": "Disorder"}
        },
        "tooltip": {
            "field": "TooltipContent",
            "type": "nominal",
            "title": null
        }
    },
    "view": {"stroke": null}
}